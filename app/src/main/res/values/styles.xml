<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>

        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorPrimaryInverse">@color/secondaryTextColor</item>

        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.Licenses">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorAccent">@color/primaryDarkColor</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?actionBarSize</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!-- This is the theme to apply on top of a toolbar using the android:theme attribute
        in order to get it to use white icons -->
    <style name="ToolbarOverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

</resources>
